@model _22DH112015_TranPhiLong.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-3" style="max-width: 600px;">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">@Model.NamePro</h3>
        </div>
        <div class="card-body p-4">
            <div class="mb-3">
                <strong>Danh mục:</strong>
                <span class="text-muted">@Model.Category</span>
            </div>

            <div class="mb-3">
                <strong>Giá:</strong>
                <span class="fw-bold text-success">@Model.Price?.ToString("C")</span>
            </div>

            <div class="mb-3">
                <strong>Mô tả:</strong>
                <p class="text-secondary">@Model.DecriptionPro</p>
            </div>

            <div class="mb-3">
                <strong>Ngày sản xuất:</strong>
                <span class="text-muted">@Model.ManufacturingDate.ToString("dd/MM/yyyy")</span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImagePro))
            {
                <div class="text-center my-4">
                    <img src="@Model.ImagePro" alt="@Model.NamePro" class="img-fluid rounded shadow-sm" style="max-height: 250px; object-fit: cover;" />
                </div>
            }

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary px-4">
                    ✏️ Chỉnh sửa
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header {
        font-size: 1.5rem;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .card-body strong {
        color: #34495e;
    }

    .btn-primary {
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }
</style>
